<nav class = "profile">
    <div class="logo">
      <h2>Your Truffle Shuffle!</h2>
    </div>

    <form action = "/game" method = "post" class = "menu_choose">
      <select name = "deck">
        <option>Choose A Deck</option>
        <% @decks = Deck.all %>
        <% @decks.each do |type| %>
          <option value= "<%= type.id %>" ><%=type.name %></option>

        <% end %>

      </select>
      <input type="submit" value="Play!" class = "choose_button">
    </form>
    
    <div class = "profile_breadcrumbs">
      <a href = "/profile">Profile</a>
      <a href = "/logout">Log Out</a>
    </div>
  
  </nav>
